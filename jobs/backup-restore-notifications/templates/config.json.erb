<%=
    require 'json'

    if_link("database") do |db_link|
        JSON.pretty_generate(
          'username' => db_link.p("username"),
          'password' => db_link.p("password"),
          'host' => db_link.instances.first.address,
          'port' => db_link.p("port"),
          'database' => db_link.p("name"),
          "adapter":"mysql",
        )
    end.else do
        JSON.pretty_generate(
          'username' => p("notifications.database.username"),
          'password' => p("notifications.database.password"),
          'host' => p("notifications.database.host"),
          'port' => p("notifications.database.port"),
          'database' => p("notifications.database.database"),
          "adapter":"mysql",
        )
    end
%>
